<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:i="using:Avalonia.Xaml.Interactivity"
	         xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
			 xmlns:resources="using:Zametek.Resource.ProjectPlan"
			 xmlns:local="using:Zametek.View.ProjectPlan"
			 xmlns:scottplot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
			 xmlns:vm="using:Zametek.ViewModel.ProjectPlan"
			 xmlns:common="using:Zametek.Common.ProjectPlan"
			 x:DataType="vm:GanttChartManagerViewModel"
			 xmlns:sys="using:System"
			 xmlns:u="https://irihi.tech/ursa"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Zametek.View.ProjectPlan.GanttChartManagerView">
	<UserControl.Resources>
	</UserControl.Resources>

	<DockPanel Margin="7">
		<ScrollViewer DockPanel.Dock="Right"
					  VerticalScrollBarVisibility="Hidden"
					  HorizontalScrollBarVisibility="Disabled">
			<DockPanel Margin="11,0,0,0"
					   Width="120">
				<DockPanel DockPanel.Dock="Top">
					<Label VerticalContentAlignment="Center"
						   HorizontalContentAlignment="Left"
						   Height="25"
						   DockPanel.Dock="Top"
						   IsTabStop="False"
						   Margin="0,0,0,3"
						   Content="{x:Static resources:Labels.Label_GroupByMode}"/>

					<ComboBox ItemsSource="{Binding Source={local:EnumBindingSource {x:Type common:GroupByMode}}}"
							  SelectedItem="{Binding Path=GroupByMode, Mode=TwoWay}"
							  BorderBrush="Gray"
							  BorderThickness="1"
							  DockPanel.Dock="Top"
							  IsTabStop="False"
							  Margin="0,0,0,11"
							  Height="25"/>
				</DockPanel>

				<DockPanel DockPanel.Dock="Top"
						   IsEnabled="{Binding Path=IsGrouped, Mode=OneWay}">
					<Label VerticalContentAlignment="Center"
						   HorizontalContentAlignment="Left"
						   Height="25"
						   DockPanel.Dock="Top"
						   IsTabStop="False"
						   Margin="0,0,0,3"
						   Content="{x:Static resources:Labels.Label_AnnotationStyle}"/>

					<ComboBox ItemsSource="{Binding Source={local:EnumBindingSource {x:Type common:AnnotationStyle}}}"
							  SelectedItem="{Binding Path=AnnotationStyle, Mode=TwoWay}"
							  BorderBrush="Gray"
							  BorderThickness="1"
							  DockPanel.Dock="Top"
							  IsTabStop="False"
							  Margin="0,0,0,11"
							  Height="25"/>
				</DockPanel>

				<DockPanel DockPanel.Dock="Top"
						   IsEnabled="{Binding Path=IsAnnotated, Mode=OneWay}">
					<Label VerticalContentAlignment="Center"
						   HorizontalContentAlignment="Left"
						   Height="25"
						   DockPanel.Dock="Top"
						   IsTabStop="False"
						   Margin="0,0,0,3"
						   Content="{x:Static resources:Labels.Label_ShowGroupLabels}"/>

					<ToggleSwitch DockPanel.Dock="Top"
								  IsTabStop="False"
								  Margin="0,0,0,11"
								  VerticalAlignment="Center"
								  VerticalContentAlignment="Center"
								  HorizontalAlignment="Center"
								  HorizontalContentAlignment="Center"
								  OffContent="{x:Static resources:Labels.Label_No}"
								  OnContent="{x:Static resources:Labels.Label_Yes}"
								  IsChecked="{Binding Path=ShowGroupLabels, Mode=TwoWay}"/>
				</DockPanel>

				<DockPanel DockPanel.Dock="Top">
					<Label VerticalContentAlignment="Center"
						   HorizontalContentAlignment="Left"
						   Height="25"
						   DockPanel.Dock="Top"
						   IsTabStop="False"
						   Margin="0,0,0,3"
						   Content="{x:Static resources:Labels.Label_ShowProjectFinish}"/>

					<ToggleSwitch DockPanel.Dock="Top"
								  IsTabStop="False"
								  Margin="0,0,0,11"
								  VerticalAlignment="Center"
								  VerticalContentAlignment="Center"
								  HorizontalAlignment="Center"
								  HorizontalContentAlignment="Center"
								  OffContent="{x:Static resources:Labels.Label_No}"
								  OnContent="{x:Static resources:Labels.Label_Yes}"
								  IsChecked="{Binding Path=ShowProjectFinish, Mode=TwoWay}"/>
				</DockPanel>

				<DockPanel DockPanel.Dock="Top">
					<Label VerticalContentAlignment="Center"
						   HorizontalContentAlignment="Left"
						   Height="25"
						   DockPanel.Dock="Top"
						   IsTabStop="False"
						   Margin="0,0,0,3"
						   Content="{x:Static resources:Labels.Label_ShowTracking}"/>

					<ToggleSwitch DockPanel.Dock="Top"
								  IsTabStop="False"
								  Margin="0,0,0,11"
								  VerticalAlignment="Center"
								  VerticalContentAlignment="Center"
								  HorizontalAlignment="Center"
								  HorizontalContentAlignment="Center"
								  OffContent="{x:Static resources:Labels.Label_No}"
								  OnContent="{x:Static resources:Labels.Label_Yes}"
								  IsChecked="{Binding Path=ShowTracking, Mode=TwoWay}"/>
				</DockPanel>

				<DockPanel DockPanel.Dock="Top">
					<Label VerticalContentAlignment="Center"
						   HorizontalContentAlignment="Left"
						   Height="25"
						   DockPanel.Dock="Top"
						   IsTabStop="False"
						   Margin="0,0,0,3"
						   Content="{x:Static resources:Labels.Label_ShowToday}"/>

					<ToggleSwitch DockPanel.Dock="Top"
								  IsTabStop="False"
								  Margin="0,0,0,11"
								  VerticalAlignment="Center"
								  VerticalContentAlignment="Center"
								  HorizontalAlignment="Center"
								  HorizontalContentAlignment="Center"
								  OffContent="{x:Static resources:Labels.Label_No}"
								  OnContent="{x:Static resources:Labels.Label_Yes}"
								  IsChecked="{Binding Path=ShowToday, Mode=TwoWay}"/>
				</DockPanel>

				<DockPanel DockPanel.Dock="Top">
					<Label VerticalContentAlignment="Center"
						   HorizontalContentAlignment="Left"
						   Height="25"
						   DockPanel.Dock="Top"
						   IsTabStop="False"
						   Margin="0,0,0,3"
						   Content="{x:Static resources:Labels.Label_ShowConnections}"/>

					<u:MultiComboBox MaxHeight="200"
									 Width="{x:Static sys:Double.NaN}"
									 HorizontalAlignment="Stretch"
									 VerticalAlignment="Stretch"
									 Focusable="True"
									 Height="25"
									 ItemsSource="{Binding Path=ActivitySelector.TargetActivities, Mode=OneWay}"
									 SelectedItems="{Binding Path=ActivitySelector.SelectedTargetActivities, Mode=OneWay}">
						<u:MultiComboBox.SelectedItemTemplate>
							<DataTemplate x:DataType="vm:SelectableActivityViewModel">
								<Grid>
									<TextBlock Text="{Binding Path=Id, Mode=OneWay}"/>
								</Grid>
							</DataTemplate>
						</u:MultiComboBox.SelectedItemTemplate>
						<u:MultiComboBox.ItemTemplate>
							<DataTemplate x:DataType="vm:SelectableActivityViewModel">
								<Grid>
									<TextBlock Text="{Binding Path=Id, Mode=OneWay}"
											   ToolTip.Tip="{Binding Path=DisplayName, Mode=OneWay}"/>
								</Grid>
							</DataTemplate>
						</u:MultiComboBox.ItemTemplate>
					</u:MultiComboBox>
				</DockPanel>

				<Grid/>
			</DockPanel>
		</ScrollViewer>

		<DockPanel>
			<!--<TextBlock x:Name="barannotation"
					   DockPanel.Dock="Bottom"
					   Height="25" />-->
			
			<!-- ScottPlot PlotView -->
			<ContentControl x:Name="scottplot"
							Content="{Binding GanttChartPlotModel, Mode=OneWay}"
							Bounds="{Binding Path=ImageBounds, Mode=OneWayToSource}"/>
		</DockPanel>
	</DockPanel>
</UserControl>
